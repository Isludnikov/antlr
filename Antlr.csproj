<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
	  <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ExpressionAutogenerated\**" />
    <EmbeddedResource Remove="ExpressionAutogenerated\**" />
    <None Remove="ExpressionAutogenerated\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Expression.g4" />
    <None Remove="MathCalculator.g4" />
  </ItemGroup>

  <ItemGroup>
    <Antlr4 Include="Expression.g4" />
    <Antlr4 Include="MathCalculator.g4">
      <Visitor>True</Visitor>
      <Listener>False</Listener>
      <Package>MathCalculatorAutogenerated</Package>
      <AntOutDir>.\MathCalculator\Autogenerated</AntOutDir>
    </Antlr4>
  </ItemGroup>

  <ItemGroup>
    <Antlr4 Update="Expression.g4">
      <Listener>false</Listener>
      <AntOutDir>.\Expression\Autogenerated</AntOutDir>
      <Package>ExpressionAutogenerated</Package>
      <Visitor>True</Visitor>
    </Antlr4>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.13.1" />
    <PackageReference Include="Antlr4BuildTasks" Version="12.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="MathCalculator\Autogenerated\" />
  </ItemGroup>

</Project>
